# =============================================================================
# COMPETITIVE PRICE INTELLIGENCE PLATFORM - ENVIRONMENT VARIABLES
# =============================================================================

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================
SCRAPER_DELAY=2
SCRAPER_TIMEOUT=30
SCRAPER_RETRIES=3
SCRAPER_USER_AGENT_ROTATION=true
SCRAPER_USE_PROXIES=false
SCRAPER_MAX_CONCURRENT_REQUESTS=16
SCRAPER_DOWNLOAD_DELAY=1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=duckdb:///data/warehouse.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# MINIO/S3 CONFIGURATION
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=price-intelligence
MINIO_SECURE=false
MINIO_REGION=us-east-1

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=sqlite:///./airflow/airflow.db
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false

# =============================================================================
# DBT CONFIGURATION
# =============================================================================
DBT_PROJECT_DIR=./dbt_project
DBT_PROFILES_DIR=./dbt_project
DBT_TARGET=dev
DBT_THREADS=4

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_RETENTION_DAYS=30

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=4
API_LOG_LEVEL=info

# =============================================================================
# NOTIFICATIONS
# =============================================================================
SLACK_WEBHOOK_URL=
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG=false
ENVIRONMENT=development
JUPYTER_TOKEN=password
JUPYTER_ENABLE_LAB=true

# =============================================================================
# COMPETITOR CONFIGURATION
# =============================================================================
AMAZON_BASE_URL=https://www.amazon.com
MERCADOLIBRE_BASE_URL=https://www.mercadolibre.com
EBAY_BASE_URL=https://www.ebay.com

# =============================================================================
# DATA RETENTION
# =============================================================================
RAW_DATA_RETENTION_DAYS=90
PROCESSED_DATA_RETENTION_DAYS=365
REPORTS_RETENTION_DAYS=30
LOGS_RETENTION_DAYS=60

# =============================================================================
# PERFORMANCE
# =============================================================================
MAX_WORKERS=4
CHUNK_SIZE=1000
BATCH_SIZE=100
CACHE_TTL=3600 